<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_exercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.newkeepinshape.activity.exercicio.ExercicioEspecificacao"
    tools:showIn="@layout/activity_exercicio_especificacao">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/txtExercicioEspecificacaoPeso"
        android:layout_below="@+id/txtExercicioEspecificacaoNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/txtExercicioEspecificacaoId"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtExercicioEspecificacaoNome"
        android:layout_alignStart="@+id/txtExercicioEspecificacaoNome"
        android:visibility="gone"/>

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/txtExercicioEspecificacaoNome"
        android:layout_below="@+id/txtExercicioEspecificacaoId"
        android:layout_alignLeft="@+id/txtExercicioEspecificacaoPeso"
        android:layout_alignStart="@+id/txtExercicioEspecificacaoPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/txtExercicioEspecificacaoQuantidade"
        android:layout_below="@+id/txtExercicioEspecificacaoPeso"
        android:layout_alignLeft="@+id/txtExercicioEspecificacaoPeso"
        android:layout_alignStart="@+id/txtExercicioEspecificacaoPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtExercicioEspecificacaoQuantidade"
        android:layout_alignLeft="@+id/txtExercicioEspecificacaoQuantidade"
        android:layout_alignStart="@+id/txtExercicioEspecificacaoQuantidade"
        android:id="@+id/txtExercicioEspecificacaoPontucao" />

    <Button
        android:text="Deletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtExercicioEspecificacaoPontucao"
        android:layout_toRightOf="@+id/txtExercicioEspecificacaoNome"
        android:layout_toEndOf="@+id/txtExercicioEspecificacaoNome"
        android:layout_marginTop="21dp"
        android:id="@+id/btnDeletarExercicio"
        android:onClick="handlerDeletarExercicio" />

    <Button
        android:text="Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDeletarExercicio"
        android:layout_toRightOf="@+id/btnDeletarExercicio"
        android:layout_toEndOf="@+id/btnDeletarExercicio"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/btnEditarExercicio"
        android:onClick="handlerEditarExercicio" />
</RelativeLayout>
